# per event
- platform: mqtt
  name: motion_event_average
  topic: '${MOTION_GROUP}/${MOTION_DEVICE}/+/image-average'
- platform: mqtt
  name: motion_event_blend
  topic: '${MOTION_GROUP}/${MOTION_DEVICE}/+/image-blend'
- platform: mqtt
  name: motion_event_animated_mask
  topic: '${MOTION_GROUP}/${MOTION_DEVICE}/+/image-animated-mask'
- platform: mqtt
  name: motion_event_composite
  topic: '${MOTION_GROUP}/${MOTION_DEVICE}/+/image-composite'
- platform: mqtt
  name: motion_event_animated
  topic: '${MOTION_GROUP}/${MOTION_DEVICE}/+/image-animated'
- platform: mqtt
  name: motion_event_end
  topic: '${MOTION_GROUP}/${MOTION_DEVICE}/+/image/end'

# per image
- platform: mqtt
  name: motion_image_last
  topic: '${MOTION_GROUP}/${MOTION_DEVICE}/+/image'
- platform: mqtt
  name: motion_image_cropped
  topic: '${MOTION_GROUP}/${MOTION_DEVICE}/+/image-cropped'

- platform: generic
  name: motion_end_picture
  verify_ssl: false
  still_image_url: >-
    {% set p = states('sensor.motion_end_picture') %}
    {% if p != 'unknown' and p != 'null' and p|length > 0 %}
      {{ p }}
    {% else %}{{ states.sensor.motion_base_url.state + '/local/images/test-signal.jpg' }}{% endif %}
