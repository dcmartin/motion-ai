## picture
- platform: template
  sensors:
    motion_end_picture:
      entity_id:
        - sensor.motion_event_end
      value_template: >-
        {% set bu = states('sensor.motion_base_url') %}
        {% set c = states.sensor.motion_event_end.attributes.camera %}
        {% if bu != 'unknown' and c != 'unknown' and c != 'null' and c|length > 0 %}
          {% if states('input_boolean.motion_snapshot') == 'on' %}
            {{ bu + '/local/images/motion_end-' + c + '.jpg' }}
          {% else %}
            {% set ep = state_attr('camera.motion_event_end' + '_' + c,'entity_picture') %}
            {% if ep != 'unknown' and ep != 'null' %}
              {{ bu + ep }}
            {% else %}
              {{ states('sensor.motion_nosignal_picture') }}
            {% endif %}
          {% endif %}
        {% else %}{{ states('sensor.motion_testsignal_picture') }}{% endif %}

