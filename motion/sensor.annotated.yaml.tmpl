##
## annotated SENSOR
##

- platform: mqtt
  name: motion_event_annotated
  state_topic: '${MOTION_GROUP}/${MOTION_CLIENT}/+/event/end/+'
  qos: 2
  expire_after: 1
  force_update: True
  json_attributes:
    - timestamp
    - date
    - time
    - count
    - event
    - info
    - detected
  value_template: >
    {% if value_json is defined %}True{% else %}False{% endif %}

## human readable status
- platform: template
  sensors:
    motion_annotated_status:
      friendly_name: Annotated
      entity_id:
        - sensor.motion_event_annotated
        - sensor.motion_annotated_entity_list
        - sensor.motion_annotated_ago
      value_template: >-
        {% set entities = states('sensor.motion_annotated_entity_list') %}
        {% set count = state_attr('sensor.motion_count_annotated','count')|int %}
        {% set event = state_attr('sensor.motion_event_annotated','event') %}
        {% if event != none and event|length > 0 and event != 'null' %}
          {% set device = event.device %}
          {% set camera = event.camera %}
          {% set elapsed = event.elapsed %}
          {% set end = event.end %}
          {% set ago = now().timestamp()|int - end %}
          {% if elapsed > 0 %} {{ elapsed }} {% else %} zero {% endif %} second(s);
          {% if count > 0 %}{{ count }} entity(s): {{ entities -}};{% else %}nothing;{% endif %}
          {{ device -}}/{{- camera }};
          {{ ago }} second(s) ago
        {% else %}No status{% endif %}

