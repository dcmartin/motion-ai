      entity_id:
        - sensor.motion_event_annotated
      value_template: >-
        {% set bu = states('sensor.motion_base_url') %}
        {% set c = states.sensor.motion_event_annotated.attributes.event.camera %}
        {% if bu != 'unknown' and c|lower != none and c != 'unknown' and c|length > 0 %}
          {% if states('input_boolean.motion_snapshot') == 'on' %}
            {{ bu + '/local/images/motion_annotated-' + c + '.jpg' }}
          {% else %}
            {% set ep = state_attr('camera.motion_event_annotated_' + c,'entity_picture') %}
            {% if ep != 'unknown' and ep != 'null' and ep|length > 0 %}
              {{ bu + ep }}
            {% else %}
              {{ states('sensor.motion_nosignal_picture') }}
            {% endif %}
          {% endif %}
        {% else %}{{ states('sensor.motion_testsignal_picture') }}{% endif %}

