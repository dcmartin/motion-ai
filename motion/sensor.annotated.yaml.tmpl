##
# event_annotated
##

- platform: mqtt
  name: motion_event_annotated
  state_topic: '${MOTION_GROUP}/${MOTION_CLIENT}/+/event/end/+'
  qos: 2
  expire_after: !secret motion-annotated-expire-after
  force_update: !secret motion-annotated-force-update
  json_attributes:
    - timestamp
    - date
    - time
    - count
    - event
    - info
    - detected
  value_template: >
    {% if value_json is defined %}True{% else %}False{% endif %}

## status
- platform: template
  sensors:
    motion_annotated_status:
      friendly_name: Annotated
      entity_id:
        - counter.motion_annotated_counter
      value_template: >-
        Counter: {{ states('counter.motion_annotated_counter') -}};
        {% set e = state_attr('sensor.motion_event_annotated','event') %}
        {% if e is not none and e|lower != 'unknown' and e|length > 0 %}
          {% set count = state_attr('sensor.motion_event_annotated','count') %} 
          {% set when = e.end|int|timestamp_custom("%a %b %d %I:%M:%S %p %Z") %}
          {% if e.elapsed > 0 %}Duration: {{ e.elapsed }} seconds{% else %}None{% endif %};
          {% if count > 0 %}
            {{ count }} entities: 
            {% set array = state_attr('sensor.motion_event_annotated','detected') %}
            {% if array is not none and array|lower != 'unknown' and array|length > 0 %}
              {% for detected in array %}
                {%- if loop.first -%}{%- else -%},{%- endif -%}
                {{- detected.entity -}}
              {% endfor %}
            {% else %}null{% endif %}
          {% else %}nothing{% endif -%};
          from: {{ e.device -}}/{{- e.camera -}}/{{- e.event -}};
          at: {{ when -}}
        {% else %}NO STATUS{% endif %}

