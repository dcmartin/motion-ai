    motion_${MOTION_CAMERA}_camera_detected_person_rank:
      unique_id: motion_${MOTION_CAMERA}_camera_detected_person_rank
      friendly_name: '${MOTION_CAMERA} ðŸ‘± â‰‹'
      unit_of_measurement: 'â‰‹'
      icon_template: 'mdi:chevron-triple-up'
      value_template: >-
        {% set mc = '${MOTION_CAMERA}' %}
        {% set n = states('sensor.motion_detected_person_agos_min') -%}
        {% set m = states('sensor.motion_detected_person_agos_max') -%}
        {% set d = states('sensor.motion_' + mc + '_detected_person_ago') -%}
        {% if n|float > 0.0 and m|float > 0.0 and d|float > 0.0 -%}
          {% set n = n|float -%}
          {% set m = m|float -%}
          {% set d = d|float -%}
          {% if d <= n %}
            {% set s = 100 %}
          {% elif d >= m %}
            {% set s = 0 %}
          {% else %}
            {%- set s = n/d*100 -%}
          {% endif %}
          {%- if s|float <= 100.0 %}
            {{- "%.2f"|format(s) -}}
          {%- else -%}null{%- endif -%}
        {% else %}null{% endif %}
    motion_${MOTION_CAMERA}_camera_detected_person_level:
      unique_id: motion_${MOTION_CAMERA}_camera_detected_person_level
      friendly_name: '${MOTION_CAMERA} ðŸ‘± level'
      icon_template: 'mdi:filter-variant'
      value_template: >-
        {% set mc = '${MOTION_CAMERA}' %}
        {% set s = states('sensor.motion_detected_person_ago_stdev') -%}
        {% set m = states('sensor.motion_detected_person_ago_mean') -%}
        {% set n = states('sensor.motion_detected_person_ago_min') -%}
        {% if s|float > 0.0 and m|float > 0.0 and n|float > 0.0 %}
          {% set rate_u = n|float / m|float * 100.0 %}
          {% set rate_s = n|float / s|float * 100.0 %}
          {% set rate_vl = rate_u - rate_s %}
          {% set rate_vh = rate_u + rate_s %}
          {% set rate_l = rate_u - rate_s/2 %}
          {% set rate_h = rate_u + rate_s/2 %}
          {% set v = states('sensor.motion_' + mc + '_camera_detected_person_rank') %}
          {%- if v|float >= rate_vh %}{{- 'veryhigh' -}}
            {% elif v|float >= rate_h %}{{- 'high' -}}
            {% elif v|float <= 0.0 %}{{- 'none' -}}
            {% elif v|float <= rate_vl %}{{- 'verylow' -}}
            {% elif v|float <= rate_l %}{{- 'low' -}}
            {% else %}{{- 'nominal' -}}
          {% endif %}
        {% else %}{{- 'null' -}}{% endif %}
    motion_${MOTION_CAMERA}_camera_detected_person_status:
      unique_id: motion_${MOTION_CAMERA}_camera_detected_person_status
      friendly_name: '${MOTION_CAMERA}'
      unit_of_measurement: 'â‰‹'
      attribute_templates:
        latitude: >-
          {%- set s = '${MOTION_CAMERA_LATITUDE}' -%}
          {%- if s|lower != 'none' and s|lower != 'unknown' and s|lower != 'unavailable' and s|lower != 'null' %}
            {{- s|float -}}
          {%- else -%}{{- state_attr('zone.home','latitude')|float -}}{%- endif -%}
        longitude: >-
          {%- set s = '${MOTION_CAMERA_LONGITUDE}' -%}
          {%- if s|lower != 'none' and s|lower != 'unknown' and s|lower != 'unavailable' and s|lower != 'null' %}
            {{- s|float -}}
          {%- else -%}{{- state_attr('zone.home','longitude')|float -}}{%- endif -%}
        radius: 0
        entity_picture: >-
          {{- states('sensor.motion_${MOTION_CAMERA}_camera_detected_person_picture') -}}
      icon_template: 'mdi:${MOTION_CAMERA_ICON}'
      value_template: >-
        {% if is_state('binary_sensor.motion_${MOTION_CAMERA}_status_camera','on') %}
          {{ states('sensor.motion_${MOTION_CAMERA}_camera_detected_person_rank') }}
        {% else %}null{% endif %}

