          {% set e = state_attr('sensor.motion_${MOTION_CAMERA}_event_face','event') %}
          {% if e|lower != 'none' and e|lower != 'unknown' and e|lower != 'unavailable' and e|lower != 'null' and e is mapping %}
            {% set n = utcnow().timestamp()|int %}
            {% set end = e.end|int %}
