            at {{ when }};
            ago: {{ ago }};
            delay: {{ delay }};
            duration: {{ elapsed }};
            counter: {{ states('counter.motion_${MOTION_CAMERA}_annotated_counter') -}}/{{- states('sensor.motion_annotated_counter') -}}
