# array of 🐄 count
- platform: template
  sensors:
    motion_${MOTION_CAMERA}_detected_animal:
      icon_template: 'mdi:counter'
      value_template: >-
        {%- set options = state_attr('input_select.motion_${MOTION_CAMERA}_detect_animal','options') -%}
        {%- if options|lower != 'none' and options|lower != 'unknown' and options|length > 0 -%}
          {%- set option = states('input_select.motion_${MOTION_CAMERA}_detect_animal') -%}
          {%- set array = state_attr('sensor.motion_${MOTION_CAMERA}_event_annotated','results') -%}
          {%- if array|lower != 'none' and array|lower != 'unknown' and array|lower != 'unavailable' and array is iterable and array|length > 0 -%}
            {%- set t = states('sensor.motion_detected_animal_threshold') -%}
            {%- for results in array if results != null -%}
              {%- if loop.first -%}[{%- else -%},{%- endif -%}
              {%- set e = results.entity -%}
              {%- set c = results.confidence -%}
              {%- if ( option|string == 'all' or e in options ) and c|float >= t|float -%}
                1
              {%- else -%}
                0
              {%- endif -%}
              {%- if loop.last -%}]{%- endif -%}
            {%- endfor -%}
          {%- else -%}null{%- endif -%}
        {%- else -%}null{%- endif -%}

