      value_template: >-
        {{ states('sensor.motion_${MOTION_CAMERA}_detected_vehicle_ago')|int > states('input_number.motion_detected_vehicle_ago')|int }}
    motion_${MOTION_CAMERA}_detected_vehicle_notify:
