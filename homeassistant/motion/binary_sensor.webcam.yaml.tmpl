- platform: template
  sensors:
    motion_${MOTION_CAMERA}_detect_entity_notify:
      icon_template: >-
        {{- 'mdi:message' -}}
      value_template: >-
        {{ is_state('input_boolean.motion_${MOTION_CAMERA}_detect_entity_notify','on') }}
    motion_${MOTION_CAMERA}_detect_entity_speak:
