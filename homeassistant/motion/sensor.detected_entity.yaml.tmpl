              {%- set e = results.entity -%}
              {%- set c = results.confidence -%}
              {%- if ( option|string == 'all' or option|string == 'entity' or e in options ) and c|float >= t|float -%}
                1
              {%- else -%}
                0
              {%- endif -%}
              {%- if loop.last -%}]{%- endif -%}
            {%- endfor -%}
          {%- else -%}null{%- endif -%}
        {%- else -%}null{%- endif -%}

