- id: motion_${MOTION_CAMERA}_detect_person_confirmed
  alias: motion_${MOTION_CAMERA}_detect_person_confirmed
  initial_state: on
  trigger:
    - platform: state
      entity_id: binary_sensor.motion_detect_person_confirmed
  condition:
    condition: and
    conditions:
      - condition: template
        value_template: >
          {{ trigger.to_state.state != trigger.from_state.state }}
  action:
    - service_template: >-
        {%- if trigger.to_state.state == 'off' -%}
          input_boolean.turn_off
        {%- else -%}
          input_boolean.turn_on
        {%- endif -%}
      target:
        entity_id: input_boolean.motion_${MOTION_CAMERA}_detect_person_confirmed

