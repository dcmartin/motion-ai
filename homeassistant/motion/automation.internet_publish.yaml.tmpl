- id: internet_publish
  alias: internet_publish
  initial_state: on
  trigger:
    platform: state
    entity_id: binary_sensor.internet_test
  condition:
    - condition: template
      value_template: >
        {{ states('binary_sensor.internet_test') == 'on' and states('sensor.internet_test')|lower != 'none' }}
  action:
    - service: mqtt.publish
      data_template:
        topic: '${MOTION_GROUP}/${MOTION_DEVICE}/internet'
        payload_template: >-
          {% set a = states.sensor.internet_test.attributes %}
          {% if a|lower != 'none' and a|lower != 'unknown' and a|lower != 'none' and a != 'none' %}
            {{ a|string|replace("'","\"")|replace("True","true")|replace("False","false")|replace("None","null") }}
          {% else %}None{% endif %}
        qos: 2
        retain: false
