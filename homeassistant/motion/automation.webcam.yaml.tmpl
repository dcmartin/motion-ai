  initial_state: on
  trigger:
    platform: state
    entity_id: sensor.motion_detected_person_date_${MOTION_CAMERA}
  condition:
    condition: and
    conditions:
      - condition: template
        value_template: >-
          {{ is_state('input_boolean.motion_media_save','on') }}
      - condition: template
        value_template: >-
          {{ states('sensor.motion_detected_person_date_${MOTION_CAMERA}')|int > 0 }}
