    - service: camera.snapshot
      data_template:
        entity_id: >-
          {% if is_state('input_boolean.motion_media_mask','off') %}
            {{ 'camera.motion_event_animated_${MOTION_CAMERA}' }}
          {% else %}
            {{ 'camera.motion_event_animated_mask_${MOTION_CAMERA}' }}
