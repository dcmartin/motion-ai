- platform: mqtt
  name: motion_hub_start
  #qos: 2
  expire_after: 60
  force_update: true
  state_topic: '${MOTION_GROUP}/${MOTION_CLIENT}/start'
  json_attributes_topic: '${MOTION_GROUP}/${MOTION_CLIENT}/start'
  icon: 'mdi:satellite-variant'
  value_template: >
    {% if value_json is defined %}True{% else %}False{% endif %}

- platform: mqtt
  name: motion_${MOTION_DEVICE}_hub_start
  #qos: 2
  expire_after: 0
  force_update: false
  state_topic: '${MOTION_GROUP}/${MOTION_DEVICE}/start'
  icon: 'mdi:eye'
  json_attributes_topic: '${MOTION_GROUP}/${MOTION_DEVICE}/start'
  value_template: >
    {% if value_json is defined %}True{% else %}False{% endif %}

- platform: template
  sensors:
    motion_actual_hub_start:
      attribute_templates:
        date: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','date') }}
        ipaddr: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','ipaddr') }}
        latitude: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','latitude') }}
        longitude: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','longitude') }}
        group: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','group') }}
        device: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','device') }}
        client: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','client') }}
        webcontrol_port: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','webcontrol_port') }}
        stream_port: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','stream_port') }}
        cameras: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','cameras') }}
        mqtt: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','mqtt') }}
        username: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','username') }}
        password: >-
          {{ state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','password') }}
        entity_picture: >-
          {% set s = state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','entity_picture') %}
          {% if s|lower != 'none' and s|lower != 'unknown' and s|lower != 'unavailable' and s|lower != 'null' and s|length > 0 %}
            {{- s -}}
          {% else %}
            {% set s = state_attr('sensor.motion_${MOTION_DEVICE}_hub_start','device') %}
            {% if s|lower != 'none' and s|lower != 'unknown' and s|lower != 'unavailable' and s|lower != 'null' %}
              {% if s == '${MOTION_DEVICE}' %}
                {{- '/local/images/logo.png' -}}
              {% else %}
                {{- '/local/images/satellite.png' -}}
              {% endif %}
            {% else %}
              {{- '/local/images/unknown.png' -}}
            {% endif %}
          {% endif %}
      value_template: >-
        {{ states('sensor.motion_${MOTION_DEVICE}_hub_start') }}
    motion_hub_start_entity_picture:
      value_template: >-
        {% set s = state_attr('sensor.motion_hub_start','entity_picture') %}
        {% if s|lower != 'none' and s|lower != 'unknown' and s|lower != 'unavailable' and s|lower != 'null' and s|length > 0 %}
          {{- s -}}
        {% else %}
          {% set s = state_attr('sensor.motion_hub_start','device') %}
          {% if s|lower != 'none' and s|lower != 'unknown' and s|lower != 'unavailable' and s|lower != 'null' %}
            {% if s == '${MOTION_DEVICE}' %}
              {{- '/local/images/logo.png' -}}
            {% else %}
              {{- '/local/images/satellite.png' -}}
            {% endif %}
          {% else %}
            {{- '/local/images/unknown.png' -}}
          {% endif %}
        {% endif %}
    motion_${MOTION_DEVICE}_hub_start_ago:
      unit_of_measurement: 's'
      icon_template: 'mdi:av-timer'
      value_template: >-
        {{- (utcnow().timestamp() - as_timestamp(states.binary_sensor.motion_${MOTION_DEVICE}_hub_start.last_updated))|int(0) -}}
    motion_hub_start_ago:
      icon_template: 'mdi:av-timer'
      unit_of_measurement: 's'
      value_template: >-
        {{- (utcnow().timestamp() - as_timestamp(states.binary_sensor.motion_hub_start.last_updated))|int(0) -}}
